<h1 id="welcome">Welcome {{name}}!</h1>
<nav class="nav coach">
    <ul class="nav__menu">
        <li class="nav__menu-item"><a href="/menu-coach">Home</a></li>
        <li class="nav__menu-item active"><a href="/view">View Sessions</a></li>
        <li class="nav__menu-item"><a href="/logout">Sign Out</a></li>
    </ul>
