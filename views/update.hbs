<!-- https://codepen.io/freeCodeCamp/pen/VPaoNP -->

<div class="container">

    <form id="survey-form">
	
		<h1 id="title" class="text-center">Coaching Session Form</h1>
        <p id="description" class="description text-center">Please answer the following questions about the coaching session held on [date].</p>
	
		<hr style="border-color:white;">
	
		<div class="form-group">
            <p>Did the session take place?</p>
            <label>
				<input id="Yes" name="tookPlace" value="Yes" type="radio" class="input-radio"/>Yes
			</label>
            <label>
				<input id="No" name="tookPlace" value="No" type="radio" class="input-radio"/> No
			</label>
        </div>
		
		<div id="canceledDiv" style="display:none;margin-bottom:20px;padding-top:20px;padding-left:10px;padding-right:10px;">	
			<div class="form-group">
				<p>Was the session cancelled 24 hours in advance?</p>
				<label>
					<input name="canceled" value="Yes" type="radio" class="input-radio"/>Yes
				</label>
				<label>
					<input name="canceled" value="No" type="radio" class="input-radio"/> No
				</label>
			</div>
			
			<div class="form-group">
				<p>Please record the rescheduled session date.</p>
				<label>
					<input class="cancelDate" type="date" value="2020-01-01" id="example-date-input">
				</label>
			</div>
		</div>
		
        <div class="form-group">
            <p>Please write any notes/comments about the session below. (optional)</p>
            <textarea
                id="comments"
                class="input-textarea"
                name="notes"
                placeholder="Enter any notes here..."
                ></textarea>
        </div>
		
        <div class="form-group">
            <button type="submit" id="submit" class="submit-button">
            Submit
            </button>
        </div>
		
    </form>
</div>

<script src="../js/update-js.js"></script>