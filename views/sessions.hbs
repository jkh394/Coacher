<div class="container">
    <form id="survey-form"  action="" method="GET">
        <h1 id="title" class="text-center">View Coaching Sessions</h1>
        <p id="description" class="description text-center">Fill out information below to find coaching sessions for a specific coach and/or coachee.</p>
        <hr style="border-color:white;">
        <div class="form-group">
            <label id="name-label" for="name">Coach Name</label>
            <div class="autocomplete" style="width:300px;">
                <input id="myInput" type="text" name="coach" class="form-control" placeholder="Enter coach's name" />
            </div>
        </div>
        <div class="form-group">
            <label id="name-label" for="name">Coachee Name</label>
            <div class="autocomplete" style="width:300px;">
                <input id="myInput2" type="text" name="coachee" class="form-control" placeholder="Enter coachee's name" />
            </div>
        </div>
        <div class="form-group" style="display: inline-block; padding-left:30%;">
            <button type="submit" id="submit" class="adjacent-button" style="float:left;">
            View Sessions
            </button>
            <button type="submit" id="clear" class="adjacent-button" style="float:right;">
            Clear Search
            </button>
        </div>
		
        <link rel="stylesheet" type="text/css" href="../css/table.css"/>
		<!-- https://bootsnipp.com/snippets/D2v11 -->
        <div class="card rounded shadow border-0">
            <div class="card-body p-3 bg-white rounded">
                <div class="float-right">
                    <div class="btn-group" style="margin-bottom: 10px;">
                        <button type="button" class="btn btn-primary btn-filter" data-target="true">Active</button>
                        <button type="button" class="btn btn-secondary btn-filter" data-target="false">Completed</button>
                        <button type="button" class="btn btn-light btn-filter" data-target="all">All</button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="example" style="width:100%" class="table table-filter table-striped table-bordered">
                        <thead>
                            <tr class="header">
                                <th>Coach</th>
                                <th>Coachee</th>
                                <th>Status</th>
                                <th># of Sessions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each sessionsList}}
                            <tr data-status="{{status}}">
                                <td>{{coach}}</td>
                                <td>{{coachee}}</td>
                                <td>{{status}}</td>
                                <td>{{totalNum}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    const coachList = {{{json coachList}}};
    const coacheeList = {{{json coacheeList}}};
</script>
<script src="../js/autocomplete-js.js"></script>
<script src="../js/filterTable-js.js"></script>
<script>
    $(document).ready(function() {
      $('#example').DataTable();
    });
</script>