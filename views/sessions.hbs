<div class="container">

    <form id="survey-form"  action="" method="GET">
    
		<h1 id="title" class="text-center">View Coaching Sessions</h1>
        <p id="description" class="description text-center">Find coaching sessions for a specific coach and/or coachee.</p>
		
		<hr style="border-color:white;">
	
        <div class="form-group">
            <label id="name-label" for="name">Coach Name</label>
            <div class="autocomplete" style="width:300px;">
                <input id="myInput" type="text" name="coach" class="form-control" placeholder="Enter coach's name" required />
            </div>
        </div>
        
        <div class="form-group">
            <label id="name-label" for="name">Coachee Name</label>
            <div class="autocomplete" style="width:300px;">
                <input id="myInput2" type="text" name="coachee" class="form-control" placeholder="Enter coachee's name" required />
            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" id="submit" class="submit-button">
           View Sessions
            </button>
        </div>
        
		
		<link rel="stylesheet" type="text/css" href="../css/table.css"/>
	
			  <div class="card rounded shadow border-0">
				<div class="card-body p-5 bg-white rounded">
				  <div class="table-responsive">
					<table id="example" style="width:100%" class="table table-striped table-bordered">
					
					<header class="text-center">
					  <h1 class="display-4"></h1>
					</header>
		  
					  <thead>
						<tr>
						  <th>#</th>
						  <th>Coach</th>
						  <th>Coachee</th>
						  <th>Status</th>
						  <th>Date</th>
						</tr>
					  </thead>
					  <tbody>
						  {{#each sessionList}}
						  <tr>
							<td>{{sessionNum}}</td>
							<td>{{coach}}</td>
							<td>{{coachee}}</td>
							<td>{{status}}</td>
							<td>{{date}}</td>
						  </tr>
						  {{/each}}
					  </tbody>
					</table>
				  </div>
				</div>
			  </div>
			  
    </form>
</div>

<script>
    const coachList = {{{json coachList}}};
    const coacheeList = {{{json coacheeList}}};
</script>

