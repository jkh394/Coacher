<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,800,300" rel="stylesheet" type="text/css" />
<h1 id="welcome">Welcome {{name}}!</h1>
<nav class="nav coach">
    <ul class="nav__menu">
        <li class="nav__menu-item"><a href="/menu-coach">Home</a></li>
        <li class="nav__menu-item active"><a href="/view">View Sessions</a></li>
        <li class="nav__menu-item"><a href="/logout">Sign Out</a></li>
    </ul>
</nav>

<link rel="stylesheet" type="text/css" href="../css/update.css"/>
<!-- https://codepen.io/freeCodeCamp/pen/VPaoNP -->
<div class="container">
    <form id="survey-form"  action="" method="GET">
        <h1 id="title" class="text-center">View Coaching Sessions</h1>
        <p id="description" class="description text-center">Use the table below to view current/previous sessions.</p>
        <hr style="border-color:white;">
		
        <link rel="stylesheet" type="text/css" href="../css/table.css"/>
		<!-- https://bootsnipp.com/snippets/D2v11 -->
        <div class="card rounded shadow border-0">
            <div class="card-body p-3 bg-white rounded">
                <div class="float-right">
                    <div class="btn-group" style="margin-bottom: 10px;">
                        <button type="button" class="btn btn-primary btn-filter" data-target="true">Active</button>
                        <button type="button" class="btn btn-secondary btn-filter" data-target="false">Completed</button>
                        <button type="button" class="btn btn-light btn-filter" data-target="all">All</button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="example" style="width:100%" class="table table-filter table-striped table-bordered">
                        <thead>
                            <tr class="header">
                                <th style="width: 30%">Coachee</th>
                                <th>Status</th>
                                <th># of Sessions</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each sessionsList}}
                            <tr data-status="{{status}}">
                                <td>{{coachee}}</td>
                                {{#if status}}
                                <td><p style="color:blue;">active</p></td>
                                {{else}}
                                <td><p style="color:gray;">completed</p></td>
                                {{/if}}
                                <td>{{totalNum}}</td>
                                <td>
                                    <a href="/logs?sessionsID={{sessionsID}}" class="btn btn-warning">
                                        <img src="https://opengameart.org/sites/default/files/Magnifying%20Glass%20Tester.png" style="width: 20%;"></img> View
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="../js/filterTable-js.js"></script>
<script>
    $(document).ready(function() {
      $('#example').DataTable();
    });
</script>